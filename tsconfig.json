{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react",
    "lib": ["esnext", "DOM", "DOM.Iterable"],
    "experimentalDecorators": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "downlevelIteration": true,
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": ["src/*"]
}
